{
  "name": "@tszhim_tech/brief",
  "version": "0.1.14",
  "description": "AI-optimized configuration generator for Cursor IDE, Claude Code, and Qoder",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brief": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "bun build src/cli.ts src/index.ts --outdir dist --target node --external react --external ink --external ink-spinner --external commander --external fs-extra --external globby --external handlebars --external yaml --external chalk",
    "cli": "tsx src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "release": "release-it"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "ai",
    "cursor",
    "claude",
    "qoder",
    "config",
    "generator",
    "rules",
    "mdc",
    "developer-tools",
    "ai-configuration",
    "cursor-rules",
    "claude-code",
    "ai-development",
    "coding-standards",
    "project-setup",
    "automation",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kelvin6365/brief.git"
  },
  "homepage": "https://github.com/kelvin6365/brief#readme",
  "bugs": {
    "url": "https://github.com/kelvin6365/brief/issues"
  },
  "author": "Kelvin Kwong",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "handlebars": "^4.7.8",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.11",
    "bun-types": "latest",
    "release-it": "^19.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
